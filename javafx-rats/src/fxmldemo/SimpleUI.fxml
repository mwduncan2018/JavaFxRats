<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<HBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml/1"
									xmlns="http://javafx.com/javafx/8"
									fx:controller="fxmldemo.SimpleUIController">
	<Label text="User Name"/>
	<TextField fx:id="textField"/>
	<Button text="Connect"/>
	<GridPane>
		<children>
			<Label text="${textField.text}" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
			<Button minWidth="150" text="Down" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
			<Button text="Further Down" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
		</children>
	</GridPane>
</HBox>